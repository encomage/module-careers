                    <p><?= mb_strimwidth($item->getContent(), 0, 290, "<span class='trimmarker'>...</span>"); ?></p>
                </a>
            </div>
        <?php endforeach; ?>
    </div>
<?php else: ?>
    <p class="no-vacancy-text"><?= $block->getNoVacancyText(); ?></p>
<?php endif; ?>